{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_ml/json_schemas/1.0/decision_tree",
    "title": "Trains and tests a given dataset and saves the model and scaler for a decision tree classification.",
    "type": "object",
    "required": [
        "input_dataset_path",
        "output_model_path"
    ],
    "properties": {
        "input_dataset_path": {
            "type": "string",
            "description": "Path to the input dataset",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_ml/raw/master/biobb_ml/test/data/classification/dataset_decision_tree.csv",
            "enum": [
                ".*\\.csv$"
            ]
        },
        "output_model_path": {
            "type": "string",
            "description": "Path to the output model file",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_ml/raw/master/biobb_ml/test/reference/classification/ref_output_model_decision_tree.pkl",
            "enum": [
                ".*\\.pkl$"
            ]
        },
        "output_test_table_path": {
            "type": "string",
            "description": "Path to the test table file",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_ml/raw/master/biobb_ml/test/reference/classification/ref_output_test_decision_tree.csv",
            "enum": [
                ".*\\.csv$"
            ]
        },
        "output_plot_path": {
            "type": "string",
            "description": "Path to the statistics plot",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_ml/raw/master/biobb_ml/test/reference/classification/ref_output_plot_decision_tree.png",
            "enum": [
                ".*\\.png$"
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "independent_vars": {
                    "type": "list",
                    "default": null,
                    "description": "Independent variables or columns from your dataset you want to train."
                },
                "target": {
                    "type": "string",
                    "default": null,
                    "description": "Dependent variable or column from your dataset you want to predict."
                },
                "criterion": {
                    "type": "string",
                    "default": "gini",
                    "description": "The function to measure the quality of a split. Supported criteria are \"gini\" for the Gini impurity and \"entropy\" for the information gain.",
                    "enum": [
                        "gini",
                        "entropy"
                    ]
                },
                "max_depth": {
                    "type": "number",
                    "default": 4,
                    "description": "The maximum depth of the model. If None, then nodes are expanded until all leaves are pure or until all leaves contain less than min_samples_split samples."
                },
                "normalize_cm": {
                    "type": "boolean",
                    "default": false,
                    "description": "Whether or not to normalize the confusion matrix."
                },
                "test_size": {
                    "type": "float",
                    "default": 0.2,
                    "description": "Represents the proportion of the dataset to include in the test split. It should be between 0.0 and 1.0."
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "description": "[WF property] Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "description": "[WF property] Do not execute if output files exist."
                }
            }
        }
    },
    "additionalProperties": false
}