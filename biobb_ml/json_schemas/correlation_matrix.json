{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_ml/json_schemas/1.0/correlation_matrix",
    "title": "Generates a correlation matrix from a given dataset.",
    "type": "object",
    "required": [
        "input_dataset_path",
        "output_plot_path"
    ],
    "properties": {
        "input_dataset_path": {
            "type": "string",
            "description": "Path to the input dataset",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_ml/raw/master/biobb_ml/test/data/utils/dataset_correlation_matrix.csv",
            "enum": [
                ".*\\.csv$"
            ]
        },
        "output_plot_path": {
            "type": "string",
            "description": "Path to the correlation matrix plot",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_ml/raw/master/biobb_ml/test/reference/utils/ref_output_plot_correlation_matrix.png",
            "enum": [
                ".*\\.png$"
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "features": {
                    "type": "list",
                    "default": null,
                    "description": "List with all features to compare."
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "description": "[WF property] Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "description": "[WF property] Do not execute if output files exist."
                }
            }
        }
    },
    "additionalProperties": false
}