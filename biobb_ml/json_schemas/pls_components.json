{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_ml/json_schemas/1.0/pls_components",
    "title": "Calculates best components number for a Partial Least Square (PLS) Regression.",
    "type": "object",
    "required": [
        "input_dataset_path",
        "output_results_path"
    ],
    "properties": {
        "input_dataset_path": {
            "type": "string",
            "description": "Path to the input dataset",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_ml/raw/master/biobb_ml/test/data/dimensionality_reduction/dataset_pls_components.csv",
            "enum": [
                ".*\\.csv$"
            ]
        },
        "output_results_path": {
            "type": "string",
            "description": "Table with R2 and MSE for calibration and cross-validation data for the best number of components",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_ml/raw/master/biobb_ml/test/reference/dimensionality_reduction/ref_output_results_pls_components.csv",
            "enum": [
                ".*\\.csv$"
            ]
        },
        "output_plot_path": {
            "type": "string",
            "description": "Path to the Mean Square Error plot",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_ml/raw/master/biobb_ml/test/reference/dimensionality_reduction/ref_output_plot_pls_components.png",
            "enum": [
                ".*\\.png$"
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "features": {
                    "type": "list",
                    "default": null,
                    "description": "Features or columns from your dataset you want to use for fitting."
                },
                "target": {
                    "type": "string",
                    "default": null,
                    "description": "Dependent variable or column from your dataset you want to predict."
                },
                "optimise": {
                    "type": "boolean",
                    "default": false,
                    "description": "Whether or not optimise the process of MSE calculation. Beware, if True selected, the process can take a long time depending on the max_components value."
                },
                "max_components": {
                    "type": "number",
                    "default": 10,
                    "description": "Maximum number of components to use by default for PLS queries."
                },
                "cv": {
                    "type": "number",
                    "default": 10,
                    "description": "Specify the number of folds in the cross-validation splitting strategy. Value must be betwwen 2 and number of samples in the dataset."
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "description": "[WF property] Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "description": "[WF property] Do not execute if output files exist."
                }
            }
        }
    },
    "additionalProperties": false
}