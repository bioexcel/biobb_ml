{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_ml/json_schemas/1.0/spectral_coefficient",
    "title": "Clusters a given dataset and calculates best K coefficient for a spectral clustering.",
    "type": "object",
    "required": [
        "input_dataset_path",
        "output_results_path"
    ],
    "properties": {
        "input_dataset_path": {
            "type": "string",
            "description": "Path to the input dataset",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_ml/raw/master/biobb_ml/test/data/clustering/dataset_spectral_coefficient.csv",
            "enum": [
                ".*\\.csv$"
            ]
        },
        "output_results_path": {
            "type": "string",
            "description": "Table with WCSS (elbow method), Gap and Silhouette coefficients for each cluster",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_ml/raw/master/biobb_ml/test/reference/clustering/ref_output_results_spectral_coefficient.csv",
            "enum": [
                ".*\\.csv$"
            ]
        },
        "output_plot_path": {
            "type": "string",
            "description": "Path to the elbow method and gap statistics plot",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_ml/raw/master/biobb_ml/test/reference/clustering/ref_output_plot_spectral_coefficient.png",
            "enum": [
                ".*\\.png$"
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "predictors": {
                    "type": "list",
                    "default": null,
                    "description": "Features or columns from your dataset you want to use for fitting."
                },
                "max_clusters": {
                    "type": "number",
                    "default": 6,
                    "description": "Maximum number of clusters to use by default for kmeans queries."
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "description": "[WF property] Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "description": "[WF property] Do not execute if output files exist."
                }
            }
        }
    },
    "additionalProperties": false
}